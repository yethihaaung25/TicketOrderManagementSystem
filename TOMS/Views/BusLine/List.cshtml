@model IList<BusLineViewModel>

<h1>Bus Line List Information</h1>
@if (TempData["info"] != null)
{
    <div class="alert alert-info">@TempData["info"]</div>
}

<table class="table table-striped-columns" id="tableRoute">
    <thead>
        <tr>
            <th scope="col">Sr.No</th>
            <th scope="col">No</th>
            <th scope="col">Owner</th>
            <th scope="col">Driver 1</th>
            <th scope="col">Phone Of Driver 1</th>
            <th scope="col">Helper 1</th>
            <th scope="col">Phone Of Helper 1</th>
            <th scope="col">Driver 2</th>
            <th scope="col">Phone Of Driver 2</th>
            <th scope="col">Helper 2</th>
            <th scope="col">Phone Of Helper 2</th>
            <th scope="col">Number Of Seat</th>
            <th scope="col">Type</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@index</td>
                <td>@item.No</td>
                <td>@item.Owner</td>
                <td>@item.Driver1</td>
                <td>@item.PhoneOfDriver1</td>
                <td>@item.Helper1</td>
                <td>@item.PhoneOfHelper1</td>
                <td>@item.Driver2</td>
                <td>@item.PhoneOfDriver2</td>
                <td>@item.Helper2</td>
                <td>@item.PhoneOfHelper2</td>
                <td>@item.NumberOfSeat</td>
                <td>@item.Type</td>
                <td>
                    @if(User.IsInRole("Admin"))
                    {
                        <a class="btn btn-success" href="/busline/edit?id=@item.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a href="/busline/delete?id=@item.Id" onclick="return confirm('are you sure to delete this recrod?');" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                    }
                </td>
            </tr>
            index++;
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#tableRoute").DataTable();
    });
</script>