@model RouteViewModel
﻿@{
    ViewData["Title"] = "Route Update";
}
<body>
    @if (TempData["info"] != null)
    {
        <div class="alert alert-success">
            @TempData["info"]
        </div>
    }
    <h3>Edit Route</h3>
    <form action="/route/update" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="mb-3">
            <label class="form-label">From City</label>
            <select class="form-select" name="FromCityID">
                <option value="@Model.FromCityId">@Model.FromCityName</option>
                @foreach (var city in ViewBag.FromCityId)
                {
                    <option value="@city.ID">@city.Name</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">To City</label>
            <select class="form-select" name="ToCityID">
                <option value="@Model.ToCityId">@Model.ToCityName</option>
                @foreach (var city in ViewBag.ToCityId)
                {
                    <option value="@city.ID">@city.Name</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Bus Line</label>
            <select class="form-select" name="BusLineID">
                <option value="@Model.BusLineId">@Model.OwnerName</option>
                @foreach (var busLine in ViewBag.BusLineId)
                {
                    <option value="@busLine.Id">@busLine.Owner</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Time</label>
            <input type="time" class="form-control" name="When" value="@Model.When">
        </div>
        <div class="mb-3">
            <label class="form-label">Unit Price</label>
            <input type="text" class="form-control" name="UnitPrice" value="@Model.UnitPrice">
        </div>

        <div class="mb-3">
            <label class="form-label">Remark</label>
            <textarea class="form-control" name="Remark">@Model.Remark</textarea>
        </div>
        <input type="submit" class="btn btn-primary" value="Entry" />
        <input type="reset" class="btn btn-primary" value="Cancel" />
    </form>
</body>